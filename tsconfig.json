{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "sourceMap": true,

        "outDir": "./target/",
        "plugins": [
            { "name": "tslint-language-service" }
        ],
        "lib": [
            "es2015",
            "es2017.object"
        ],
        "declaration": true
    },
    "files": [
        "./src/index.ts",
        "./src/example.ts"
    ]
}
